{% extends 'template.html.twig' %}

{% block body %}
    {#--------Tabular data of all relationships---#}
    <div class="masonry-item col-12">
        <br>
        <div class="bgc-white p-20 bd">
            <div class="row" id="showEntriesDiv">
                <div class="col-md-10">
                    <h4 class="c-grey-900">
                        {% trans %}Relationships{% endtrans %}
                        <a href="{{ path('relationship_create') }}"><i class="fa fa-plus-square"></i></a>
                    </h4>
                </div>
            </div>
            <table id="relationshiptable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>{% trans %}ID{% endtrans %}</th>
                        <th>{% trans %}Relationship{% endtrans %}</th>
                        <th>{% trans %}Status{% endtrans %}</th>
                        <th>{% trans %}Delete{% endtrans %}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for relationship in relationships %}
                    <tr>
                        <td>{{ relationship.id }}</td>
                        <td><a href="/relationship/{{ relationship.id }}/edit">{{ relationship.relationship }}</a></td>
                        <td>{{ (relationship.status == true) ? "Enabled" : "Disabled" }}</td>
                        <td><a href="/relationship/{{ relationship.id }}/delete"><i class="fa fa-trash fa-lg"></i></a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            <hr />
        </div>
    </div>
 {#----Table div ends Here----#}
{% endblock %}